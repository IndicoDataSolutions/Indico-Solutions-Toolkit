from indico_toolkit import create_client
from indico_toolkit.indico_wrapper.download import Download
from indico import GraphQLRequest

HOST = "app.indico.io"
API_TOKEN_PATH = "./indico_api_token.txt"
DATASET_ID = 000
LABELSET_ID = 000 # if labelset id is not known, please look at last example using teach task id
SUBMISSION_ID = 000

client = create_client(HOST, API_TOKEN_PATH)
downloader = Download(client)

"""
EXAMPLE 1:
Download PDFs from an uploaded dataset to a local directory
"""

downloader.get_dataset_pdfs(dataset_id=DATASET_ID, labelset_id=LABELSET_ID, output_dir="./data/downloads/")

"""
EXAMPLE 2:
Downloads source pdf from a submission id and writes to disk.
"""

downloader.get_submission_pdf(submission_id=LABELSET_ID, output_dir="./data/downloads/")

"""
Exampple: How to retrieve labelset id from questionaire
"""

TEACH_ID = 000

class GetQuestionnaireMetadata(GraphQLRequest):
    query = """
        query GetQuestionnaire($questionnaireId: Int!){
            questionnaire(id: $questionnaireId){
                id
                name
                datasetId
                sourceColumnId
                subsetId
                assignedUsers {
                    id
                    userId
                }
                questions {
                    labelsetId
                    targets
                }
            }
        }
    """

    def __init__(self, questionnaire_id):
        super().__init__(self.query, variables={"questionnaireId": questionnaire_id})

questionnaire = client.call(GetQuestionnaireMetadata(questionnaire_id=TEACH_ID))
labelset_id = questionnaire['questionnaire']['questions'][0]['labelsetId']

